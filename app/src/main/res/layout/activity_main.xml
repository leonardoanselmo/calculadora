<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/calc">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="0"
        android:textSize="20dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="apagar"
        android:id="@+id/apagar"
        android:layout_below="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="7"
        android:id="@+id/button7"
        android:layout_below="@+id/apagar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="4"
        android:id="@+id/button4"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button7"
        android:layout_alignEnd="@+id/button7"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="8"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="9"
        android:id="@+id/button9"
        android:layout_below="@+id/apagar"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="/"
        android:id="@+id/buttondiv"
        android:layout_below="@+id/apagar"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="5"
        android:id="@+id/button5"
        android:layout_below="@+id/button8"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="6"
        android:id="@+id/button6"
        android:layout_below="@+id/button9"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="X"
        android:id="@+id/buttonX"
        android:layout_below="@+id/buttondiv"
        android:layout_alignLeft="@+id/buttondiv"
        android:layout_alignStart="@+id/buttondiv"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="1"
        android:id="@+id/button1"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="2"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:layout_toLeftOf="@+id/button6"
        android:layout_toStartOf="@+id/button6"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="-"
        android:id="@+id/buttonmenos"
        android:layout_below="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="0"
        android:id="@+id/button0"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="."
        android:id="@+id/buttonponto"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="="
        android:id="@+id/buttonigual"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toLeftOf="@+id/buttonmenos"
        android:layout_toStartOf="@+id/buttonmenos"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="+"
        android:id="@+id/buttonsoma"
        android:layout_below="@+id/buttonmenos"
        android:layout_alignLeft="@+id/buttonmenos"
        android:layout_alignStart="@+id/buttonmenos"
        android:textSize="50dp" />

</RelativeLayout>
